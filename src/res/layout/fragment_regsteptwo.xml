<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_regsteptwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:paddingLeft="10dp"
    android:paddingTop="30dp"  >

    <ImageView
        android:id="@+id/regtwo_imgbtn_uppho"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/uploadphoto"
        android:src="@drawable/photo_default" />

    <EditText
        android:id="@+id/regtwo_et_birday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"	
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="25sp"
        android:hint="@string/birthday"
        android:layout_below="@+id/regtwo_imgbtn_uppho"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_bg"
        android:inputType="text" >
    </EditText>

    <RadioGroup 
        android:id="@+id/regtwo_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/regtwo_et_birday"
        android:layout_centerHorizontal="true">
        
        <RadioButton 
            android:id="@+id/regtwo_rb_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boy"/>
        
        <RadioButton 
            android:id="@+id/regtwo_rb_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/girl"/>
    </RadioGroup>
    
</RelativeLayout>
